{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/mufin-nestjs/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/mufin-nestjs/tsconfig.app.json"
  },
  "projects": {
    "databases": {
      "type": "library",
      "root": "libs/databases",
      "entryFile": "index",
      "sourceRoot": "libs/databases/src",
      "compilerOptions": {
        "tsConfigPath": "libs/databases/tsconfig.lib.json"
      }
    },
    "mufin-nestjs": {
      "type": "application",
      "root": "apps/mufin-nestjs",
      "entryFile": "main",
      "sourceRoot": "apps/mufin-nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mufin-nestjs/tsconfig.app.json"
      }
    },
    "upload": {
      "type": "application",
      "root": "apps/upload",
      "entryFile": "main",
      "sourceRoot": "apps/upload/src",
      "compilerOptions": {
        "tsConfigPath": "apps/upload/tsconfig.app.json"
      }
    },
    "encryption": {
      "type": "library",
      "root": "libs/encryption",
      "entryFile": "index",
      "sourceRoot": "libs/encryption/src",
      "compilerOptions": {
        "tsConfigPath": "libs/encryption/tsconfig.lib.json"
      }
    },
    "utils": {
      "type": "library",
      "root": "libs/utils",
      "entryFile": "index",
      "sourceRoot": "libs/utils/src",
      "compilerOptions": {
        "tsConfigPath": "libs/utils/tsconfig.lib.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/mufin-nestjs"
}